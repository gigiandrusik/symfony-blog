{% extends 'base.html.twig' %}

{% block title %}Category {{ category.name }}{% endblock %}

{% block body %}

    <a href="{{ path('categories') }}" class="btn btn-info">
        Categories
    </a>

    <hr/>

    <div class="table-responsive">
        <table class="table table-striped jambo_table bulk_action">
            <tbody>
                <tr class="pointer">
                    <td>
                        Name
                    </td>
                    <td>
                        {{ category.name }}
                    </td>
                </tr>
                <tr class="pointer">
                    <td>
                        Description
                    </td>
                    <td>
                        {{ category.description }}
                    </td>
                </tr>
            </tbody>
        </table>
    </div>

    <hr/>

    {% if category.posts|length > 0 %}

        <div class="col-md-6">

            <h3>Posts</h3>

            <div class="table-responsive">
                <table class="table table-striped jambo_table bulk_action">
                    <thead>
                        <tr class="headings">
                            <th class="column-title">
                                Name
                            </th>
                            <th class="column-title">
                                Content
                            </th>
                            <th class="column-title">
                                File
                            </th>
                        </tr>
                    </thead>
                    <tbody>

                    {% for post in category.posts %}

                        <tr class="pointer">
                            <td>
                                {{ post.name }}
                            </td>
                            <td>
                                {{ post.content }}
                            </td>
                            <td>
                                {% if post.file %}
                                    <image src="{{ asset('uploads/images/' ~ post.file) }}" class="img-thumbnail" width="200px" height="200px" />
                                {% endif %}
                            </td>
                        </tr>

                    {% endfor %}

                    </tbody>
                </table>
            </div>
        </div>

    {% endif %}

    {% if category.comments|length > 0 %}

        <div class="col-md-6">

            <h3>Comments</h3>

            <div class="table-responsive">
                <table class="table table-striped jambo_table bulk_action">
                    <thead>
                        <tr class="headings">
                            <th class="column-title">
                                Author
                            </th>
                            <th class="column-title">
                                Content
                            </th>
                            <th class="column-title">
                                Created
                            </th>
                        </tr>
                    </thead>
                    <tbody>

                    {% for comment in category.comments %}

                        <tr class="pointer">
                            <td>
                                {{ comment.author }}
                            </td>
                            <td>
                                {{ comment.content }}
                            </td>
                            <td>
                                {{ comment.createdAt|date() }}
                            </td>
                        </tr>

                    {% endfor %}

                    </tbody>
                </table>
            </div>
        </div>

    {% endif %}

{% endblock %}